<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_medication_to_list"
    android:id="@+id/inBetween">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cf1874"
            app:layout_constraintTop_toTopOf="parent"
            >
        </androidx.appcompat.widget.Toolbar>

        <EditText
            android:id="@+id/medicine_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop='100dp'
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter New Prescription Name (Option)"
            />

        <EditText
            android:id="@+id/medicine_quantity"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="150dp"
            android:ems="10"
            android:inputType="number"
            android:hint= "Number of Medications in a given bottle (Option)"
            />

        <EditText
            android:id="@+id/dosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:ems="10"
            android:inputType="number"
            android:hint="How much do you take in one dosage? (Option)"
            />

        <EditText
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:ems="10"
            android:hint="Time of day you take the medications (Option)"
            android:inputType="time" />

        <EditText
            android:id="@+id/numberOfDoses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:hint="Number of Doses per Day (Option)"
            android:inputType="number"/>

        <Button
            android:id="@+id/SubmitNewChanges"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="350dp"
            android:text="Submit New Settings"
            />


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>